<include file="Public:header" />
<!-- Sidebar begins -->
<div id="sidebar">
	<include file="Public:left" />
</div>
<!-- Sidebar ends -->

<!-- Content begins -->
<div id="content">

  <include file="Public:bav" />
  
    <!-- Main content -->
    <div class="wrapper">
        <!-- Media table sample -->
        <div class="widget check">
            <div class="whead">
            	<h6>用户个人中心背景图列表</h6>
            	<a href="{:U('SiteConfig/index')}" class="buttonH bGreen">返回</a>
            	<a href="{:U('SiteConfig/execStatSKeyword')}" class="buttonH bBlue">生成</a>
				<div class="clear"></div>
			</div>
            <table cellpadding="0" cellspacing="0" width="100%" class="tDefault checkAll tMedia" id="checkAll">
                <thead>
                    <tr>
		                <td width="50">名次</td>
		                <td>搜索词</td>
		                <td width="160">排名情况</td>
		                <td width="50">操作</td>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="10">
                        <empty name="list">
                        	额。。。木有咧……
                        </empty>
                        </td>
                        
                    </tr>
                </tfoot>
                <tbody>
                    <volist name="list" id="vo">
		            <tr>
		                <td>{$i}</td>
		                <td>
		                	<if condition="$i lt 16">
		                		<span class="blueBack">{$vo.keyword}</span>
		                	<else />
		                		<span>{$vo.keyword}</span>
		                	</if>
		                </td>
		                <td>
		                	<if condition="$vo['top_num'] lt 0" >
		                	<span class="green">↓</span>
		                	<elseif condition="$vo['top_num'] eq 0" />
		                	-
		                	<else />
		                	<span class="red">↑</span>
		                	</if>
		                </td>
		                <td>
		                	<a onclick="return confirm('删除后不可恢复，确定删除么!');" href="{:U('SiteConfig/doDelStatSKeyword',array('id'=>$vo['id']))}">删除</a>
		                </td>
		            </tr>
		            </volist>
                </tbody>
            </table>
        </div>
     
    </div>
    <!-- Main content ends -->
    
</div>
<!-- Content ends -->
<include file="Public:footer" />