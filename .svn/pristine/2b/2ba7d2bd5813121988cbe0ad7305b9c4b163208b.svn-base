<include file="Public:header" />
<!-- Sidebar begins -->
<div id="sidebar">
	<include file="Public:left" />
	<!-- Secondary nav -->
</div>
<!-- Sidebar ends -->

<!-- Content begins -->
<div id="content">
    <include file="Public:bav" />
    <!-- Main content -->
    <div class="wrapper">
        	<div class="fluid">
        	<script language="javascript" type="text/javascript" src="__JS__/My97DatePicker/WdatePicker.js"></script>
        		<form method='post' id="form1" name="form1" action="{:U('Pit/updatePitUser')}"  enctype="multipart/form-data">
                    <div class="widget ">
                        <div class="whead">
                        	<h6>坑用户详情</h6>
                        	<empty name="Think.get.backurl">
	                        	<a href="{:getCurrentUrl()}" class="buttonH bBlue mb10 mt5">返回</a>
	                        <else />
	                        	<a href="{$Think.get.backurl}" class="buttonH bBlue mb10 mt5">返回</a>
	                        </empty>
                        	<div class="clear"></div>
                        </div>
                        <div class="formRow">
                            <div class="grid3"><label>坑用户 :</label></div>
                            <div class="grid9 noSearch">
                            	<input type="text" readonly="readonly" value="{$vo.user_name} （{$vo.user_id}）">
                            </div>
                            <div class="clear"></div>
                        </div>
                        
                        <div class="formRow">
                            <div class="grid3"><label>可占坑数</label></div>
                            <div class="grid9"><input type="text" name="allow_pit" value="{$vo.allow_pit}"></div>
                            <div class="clear"></div>
                        </div>
                        
                        <div class="formRow">
                            <div class="grid3"><label>正在占坑数</label></div>
                            <div class="grid9"><input type="text" readonly="readonly" value="{$vo.doing_pit}"></div>
                            <div class="clear"></div>
                        </div>
                        
                        <div class="formRow">
                            <div class="grid3"><label>未完成坑数</label></div>
                            <div class="grid9"><input type="text" readonly="readonly" value="{$vo.undone_pit}"></div>
                            <div class="clear"></div>
                        </div>
                        
                        <div class="formRow">
                            <div class="grid3"><label>已完成坑数</label></div>
                            <div class="grid9"><input type="text" readonly="readonly" value="{$vo.done_pit}"></div>
                            <div class="clear"></div>
                        </div>
                        
                        <div class="formRow">
                        	<notempty name="Think.get.backurl">
                        	<input type="hidden" name="backurl" value="{$Think.get.backurl}">
                        	</notempty>
                        	<empty name="vo.id">
                        		<input type="hidden" value="{$vo.user_id}" name="user_id">
                        		<input type="hidden" value="{$vo.user_name}" name="user_name">
                        		<input type="hidden" value="{$vo.avatar}" name="avatar">
                        		<input type="hidden" value="{$vo.doing_pit}" name="doing_pit">
                        		<input type="hidden" value="{$vo.done_pit}" name="done_pit">
                        		<input type="hidden" value="{$vo.undone_pit}" name="undone_pit">
                        	<else />
                        		<input type="hidden" value="{$Think.get.id}" name="id">
                        	</empty>
                        	<input type="submit" value="提 交" class="buttonM bBlack formSubmit" /><div class="clear"></div>
                        </div>
                        <div class="clear"></div>
                    
                    </div>
                    </form>
            </div>
    </div>
    <!-- Main content ends -->
    
</div>
<!-- Content ends -->
<script>
(function(){
	/**
	 * 使用HTML5 File API, 來即時預覽image
	 */
	$("#upload_pit_img").change(function(){
		var objUrl = booGetObjectURL(this.files[0]) ;
		if (objUrl) {
			$("#pit_img").attr("src", objUrl) ;
		}
	}) ;
})();
</script>

<include file="Public:footer" />
