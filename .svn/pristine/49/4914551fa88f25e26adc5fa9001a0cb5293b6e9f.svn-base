<include file="Public:header" />
<!-- Sidebar begins -->
<script src="__JS__/dialog/artDialog.js?skin=default"></script>
<div id="sidebar">
	<include file="Public:left" />
	<!-- Secondary nav -->
    <div class="secNav">
        <div class="secWrapper">
            <!-- Tabs container -->
            <form method="get" action="{:U('Adv/index')}">
            <input type="hidden" value="{$Think.MODULE_NAME}" name="m"/>
            <input type="hidden" value="{$Think.ACTION_NAME}" name="a"/>
            <div id="tab-container" class="tab-container">
				<ul class="iconsLine ic1 etabs">
                    <li><a href="#alt2" title="">广告搜索:</a></li>
                </ul>
                <div class="divider"><span></span></div>
                <div id="alt2">
                	<!-- Sidebar forms -->
                    <div class="sideWidget">
                        <div class="formRow">
                            <label>广告ID:</label>
                            <input type="text" name="id" value="{$Think.get.id}" placeholder="广告ID" />
                        </div>
                        <div class="formRow">
                            <input type="submit" class="buttonS bLightBlue" value="搜索广告" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="divider"><span></span></div>
            </form>
            <include file="HomeOnline:opt" />
       </div> 
       <div class="clear"></div>
   </div>
</div>
<!-- Sidebar ends -->
    
<!-- Content begins -->
<div id="content">
    <div class="contentTop">
        <span class="pageTitle">首页【电影】上线配置</span>
       	<div class="clear"></div>
    </div>
    
    <include file="Public:bav" />
    
    <!-- Main content -->
    <div class="wrapper">
        <!-- Media table sample -->
        <div class="widget check">
            <div class="whead">
            	<h6>首页【电影】上线配置列表</h6>
            	<a href="{:U('HomeOnline/addMovieConf')}" class="buttonH bBlue">添加</a>
            	<div class="clear"></div>
            </div>
            <table cellpadding="0" cellspacing="0" width="100%" class="tDefault checkAll tMedia" id="checkAll">
                <thead>
                    <tr>
                        <td width="10">ID</td>
                        <td>配置电影</td>
                        <td width="250">（小米渠道）上线时间</td>
                        <td>电影ID</td>
                        <td width="200">添加时间</td>
                        <td width="80">操作</td>
                        
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="7">
                        	<empty name="list">
                        		木油满足您强烈需求的配置，您可以添加一部咩？
                        	<else />
                            <div class="tPages">
                                <ul class="pages">
                                    {$page}
                                </ul>
                            </div>
                            </empty>
                        </td>
                    </tr>
                </tfoot>
                <tbody>
                	<volist name="list" id="vo">
		            <tr>
		                <td>{$vo.id}</td>
		                <td style="vertical-align: top;">
		                	<div style="text-align:left;">
		                	<img src="{$vo['pic_a'][0]}"  height="40"/>&nbsp;
		                	<img src="{$vo['pic_a'][1]}"  height="40"/>&nbsp;
		                	<br />
		                	<img src="{$vo['pic_a'][2]}"  height="40"/>&nbsp;
		                	<img src="{$vo['pic_a'][3]}"  height="40"/>&nbsp;
		                	</div>
		                </td>
		                <td><empty name="vo.online_time"><span class="redBack">未上线</span><else /><span class="greenBack">{$vo.online_time}</span></empty></td>
		                <td>{$vo.online_id}</td>
		                <td>{$vo.add_time}</td>
		                <td>
		                	<!-- Simple buttons with caret -->
	                        <div class="btn-group" style="float: left;">
	                            <a href="#" class="buttonM bDefault opt" data-toggle="dropdown">点我 <span class="caret"></span></a>
	                            <ul class="dropdown-menu pull-right">
	                            	<li><a href="{:U('HomeOnline/edit', array('id'=>$vo['id']))}"><span class="icos-view"></span>查看</a></li>
	                                <li><a href="{:U('HomeOnline/online', array('id'=>$vo['id'],'mname'=>$vo['online_id'],'type'=>1))}"><span class="icos-cross"></span>上/下 线</a></li>
	                            </ul>
	                        </div>
		                </td>
		            </tr>
		            </volist>
                </tbody>
            </table>
            <div id="xxsdf" style="display:none;min-width:600px;" class="fluid">sdfsdf</div>
        </div>
     
    </div>
    <!-- Main content ends -->
    
</div>
<!-- Content ends -->
<include file="Public:footer" />
