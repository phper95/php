<include file="Public:header" />
<!-- Sidebar begins -->
<div id="sidebar">
	<include file="Public:left" />
	<!-- Secondary nav -->
</div>
<!-- Sidebar ends -->

<!-- Content begins -->
<div id="content">
    
    <!-- Breadcrumbs line -->
    <div class="breadLine">
        <div class="bc">
            <ul id="breadcrumbs" class="breadcrumbs">
                <li><a href="#">主页</a></li>
                <li><a href="#">{}</a>
                    
                </li>
                
            </ul>
        </div>
        
        
    </div>
    <!-- Main content -->
    <div class="wrapper">
        	<div class="fluid">
        		<form method='post' id="form1" name="form1" action="{:U('Node/update')}"  enctype="multipart/form-data">
                    <div class="widget ">
                        <div class="whead">
                        	<h6>编辑节点</h6>
                        	<a href="{:getCurrentUrl()}" class="buttonH bBlue mb10 mt5">取消</a>
                        	<div class="clear"></div>
                        </div>
                        <div class="formRow">
                            <div class="grid3"><label>上级节点 :</label></div>
                            <div class="grid9 noSearch">
                            	<select name="pid" class="select">
                            	<option value="0">作为一级菜单</option>
                            	{$selecttree}
                        		</select>
                            </div>
                            <div class="clear"></div>
                        </div>
                    
                        <div class="formRow">
                            <div class="grid3"><label>菜单名称:</label></div>
                            <div class="grid3"><input type="text" name="title" value="{$vo.title}"/></div>
                            <div class="clear"></div>
                        </div>
                        
                        <div class="formRow">
                            <div class="grid3"><label>Module:</label></div>
                            <div class="grid3"><input type="text" name="name" value="{$vo.name}"/></div>
                            <div class="clear"></div>
                        </div>
                        
                        <div class="formRow">
                            <div class="grid3"><label>排序值:</label></div>
                            <div class="grid1"><input type="text" name="sort" value="{$vo.sort}"/></div>
                            <div class="clear"></div>
                        </div>
                        
                        <div class="formRow">
                            <div class="grid3"><label>状态:</label></div>
                            <div class="grid1">
                            	<select name="status">
		                            <option <eq name="vo.status" value="1" >selected</eq> value="1">启用</option>
		                            <option <eq name="vo.status" value="0" >selected</eq> value="0">禁用</option>
	                        	</select>
                        	</div>
                            <div class="clear"></div>
                        </div>
                        
                        <div class="formRow">
                            <div class="grid3"><label>描述:</label></div>
                            <div class="grid9"><textarea rows="8" cols="" name="remark">{$vo.remark}</textarea></div>
                            <div class="clear"></div>
                        </div>
                        
                        <div class="formRow">
                        	<input type="hidden" name="id" value="{$vo.id}" >
                        	<input type="submit" value="提 交" class="buttonM bBlack formSubmit" /><div class="clear"></div>
                        </div>
                        <div class="clear"></div>
                    
                    </div>
                    </form>
            </div>
    </div>
    <!-- Main content ends -->
    
</div>
<!-- Content ends -->

<include file="Public:footer" />
