<!-- Content begins -->
<div id="content">
    <div class="contentTop">
        <span class="pageTitle">渠道管理</span>
        <div class="clear"></div>
    </div>
    
    <!-- Breadcrumbs line -->
    <div class="breadLine">
        <div class="bc">
            <ul id="breadcrumbs" class="breadcrumbs">
                <li><a href="#">Dashboard</a></li>
                <li><a href="#">渠道列表</a>
                    
                </li>
                
            </ul>
        </div>
        
        
    </div>
    
